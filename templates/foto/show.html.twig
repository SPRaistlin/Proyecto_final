{% extends 'admin/base.html.twig' %}

{% block title %}Foto{% endblock %}

{% block body %}
    <h1>Foto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ foto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ foto.nombre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ foto.ruta }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ foto.created ? foto.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('foto_index') }}">back to list</a>

    <a href="{{ path('foto_edit', {'id': foto.id}) }}">edit</a>

    {{ include('foto/_delete_form.html.twig') }}
{% endblock %}
