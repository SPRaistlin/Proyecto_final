{% extends 'base.html.twig' %}

{% block title %}Foto index{% endblock %}

{% block body %}
    <h1>Foto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Slug</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for foto in fotos %}
            <tr>
                <td>{{ foto.id }}</td>
                <td>{{ foto.nombre }}</td>
                <td>{{ foto.slug }}</td>
                <td>{{ foto.created ? foto.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('foto_show', {'id': foto.id}) }}">show</a>
                    <a href="{{ path('foto_edit', {'id': foto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('foto_new') }}">Create new</a>
{% endblock %}
