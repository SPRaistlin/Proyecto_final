{% extends 'base.html.twig' %}

{% block title %}Buscador{% endblock %}

{% block body %}
{% for flash_message in app.session.flashBag.get('success') %}
    <div class="alert alert-success">
        {{ flash_message }}
    </div>
{% endfor %}
{% for flash_message in app.session.flashBag.get('error') %}
    <div class="alert alert-danger">
        {{ flash_message }}
    </div>
{% endfor %}	
    <h1>Resultado de la b√∫squeda</h1>

    Mostrar los resultados para {{ resultado }}

    {% for recetum in recetas %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recetum.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ recetum.nombre }}</td>
            </tr>
            <tr>
                <th>Ingredientes</th>
                <td>{{ recetum.ingredientes }}</td>
            </tr>
            <tr>
                <th>Preparacion</th>
                <td>{{ recetum.preparacion }}</td>
            </tr>
            <tr>
                <th>Dificultad</th>
                <td>{{ recetum.dificultad }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ recetum.categoria }}</td>
            </tr>
        {% if recetum.ruta  %}
            <tr>
                <th>Imagen destacada</th>
                <td>                
                    <img src="/{{ recetum.path }}/{{ recetum.ruta }}" alt="{{ recetum.nombre }}" title="{{ recetum.nombre }}">
                </td>
            </tr>
        {% endif %}   
        </tbody>
    </table>
    {% else %}
    <tr>
        <td colspan="7">no records found</td>
    </tr>
{% endfor %}

{% endblock %}
